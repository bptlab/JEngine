	<profiles>
		<profile>
			<id>remote</id>
			<properties>
				<db.schema>JEngineV2</db.schema>
			</properties>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<phase>generate-test-resources</phase>
								<configuration>
									<target>
										<move
											file="${project.build.outputDirectory}/config_template.properties"
											tofile="${project.build.outputDirectory}/config.properties" />
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<!-- creates config file with default values if not existing -->
			<id>local</id>
			<activation>
				<file>
					<missing>${basedir}/config.properties</missing>
				</file>
			</activation>
			<properties>
				<!-- default values -->
				<db.user>chimera</db.user>
				<db.password>bp2015</db.password>
				<db.schema>chimeradb</db.schema>
			</properties>
			<build>
				<plugins>
					<plugin>
						<!-- copy and filter config template to basedir -->
						<artifactId>maven-resources-plugin</artifactId>
						<version>2.6</version>
						<executions>
							<execution>
								<phase>validate</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>${basedir}</outputDirectory>
									<resources>
										<resource>
											<directory>${basedir}/src/main/resources</directory>
											<include>config_template.properties</include>
											<filtering>true</filtering>
										</resource>
									</resources>
									<overwrite>true</overwrite>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<!-- rename template file to 'config.properties' -->
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<phase>validate</phase>
								<configuration>
									<target>
										<move file="${basedir}/config_template.properties"
											tofile="${basedir}/config.properties" />
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
